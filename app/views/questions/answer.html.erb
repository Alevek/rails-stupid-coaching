<div class="container">
  <h1>Stupid coaching</h1>

  <div class="question" class="border-left">
    <p><%= params[:question] %></p>
    <p><em>--You--</em></p>
  </div>
  <div class="answer" class="border-left">
    <p><strong><%= @answer %></strong></p>
    <p><em>--Your coach--</em></p>
  </div>

  <p class="link"><%= link_to "Ask me another question ?", ask_path %></p>
</div>

